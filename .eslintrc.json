{
	"parserOptions": {
		"ecmaVersion": 2017,
		"sourceType": "module"
	},
	"globals": {
		"require": true
		,"module": true
	},
	"rules": {
		"no-var": 1,
		"no-undef": 2,
		"no-unused-vars": ["error", { "argsIgnorePattern": "_" }],
		"operator-linebreak": ["warn", "before", {
			"overrides": {
				"=": "after"
			}
		}],
		"no-const-assign": ["warn"],
		"operator-assignment": ["warn", "never"],
		"no-dupe-keys": ["warn"],
		"no-cond-assign": ["warn"],
		"no-sparse-arrays": ["error"],
		"array-callback-return": ["error"],
		"complexity": ["warn"],
		"callback-return": ["error"],
		"max-depth": ["warn", 4],
		"max-len": ["warn", 80, 4],
		"consistent-return": 2
	}
}